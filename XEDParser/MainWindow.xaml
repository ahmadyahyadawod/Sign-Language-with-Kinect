<Window x:Class="XEDParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:c="clr-namespace:XEDParser"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <k:KinectSensorChooserUI HorizontalAlignment="Right" VerticalAlignment="Top" Name="sensorChooserUi" />
        <Button x:Name="btn_Start" Content="start" HorizontalAlignment="Left" Margin="234,250,0,0" VerticalAlignment="Top" Width="75" Click="btn_Start_Click"/>
        <Button x:Name="btn_end" Content="end" HorizontalAlignment="Left" Margin="341,250,0,0" VerticalAlignment="Top" Width="75" Click="btn_end_Click"/>
        <Label x:Name="lbl_Color" HorizontalAlignment="Left" Margin="293,90,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Depth" HorizontalAlignment="Left" Margin="293,110,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
