<Window x:Class="CURELab.SignLanguage.Debugger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="{Binding Path=FileName, StringFormat=Sign Language Debugger {0:S}}"   Height="850" Width="1200" ResizeMode="CanMinimize" HorizontalAlignment="Left" VerticalAlignment="Top" Left="100" Top="0">
    <Grid>
        <MediaElement x:Name="me_rawImage" HorizontalAlignment="Left" Height="285" Margin="83,35,0,0" VerticalAlignment="Top" Width="365" MediaOpened="MediaOpened"/>
        <Button x:Name="btn_openFile" Content="Open" HorizontalAlignment="Left" Margin="112,320,0,0" VerticalAlignment="Top" Width="76" Click="btn_openFile_Click"/>
        <Button x:Name="btn_play" Content="Play" HorizontalAlignment="Left" Margin="232,320,0,0" VerticalAlignment="Top" Width="74" Click="btn_play_Click"/>
        <Button x:Name="btn_Stop" Content="Stop" HorizontalAlignment="Left" Margin="357,320,0,0" VerticalAlignment="Top" Width="76" Click="btn_Stop_Click"/>
        <d3:ChartPlotter x:Name="cht_bigChart" VerticalAlignment="Bottom" Margin="566,0,37,453" Height="359">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalIntegerAxis x:Name="xAxisFrame1"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:Header FontFamily="Georgia" Content="Data to show"/>
            <d3:VerticalAxisTitle FontFamily="Georgia" Content="Data to show" />
            <d3:HorizontalAxisTitle FontFamily="Georgia" Content="Frame"/>
            <d3:HorizontalLine Value="{Binding MaxVelocity}" Stroke="Red" StrokeThickness="2"/>
            <d3:HorizontalLine Value="{Binding MinVelocity}" Stroke="Red" StrokeThickness="2"/>

        </d3:ChartPlotter>
        <d3:ChartPlotter x:Name="cht_right" VerticalAlignment="Bottom" Margin="83,0,37,248" Height="200">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalIntegerAxis Name="xAxisFrame"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:Header FontFamily="Georgia" Content="right hand"/>
            <d3:VerticalAxisTitle FontFamily="Georgia" Content="Right[V]" />
            <d3:HorizontalAxisTitle FontFamily="Georgia" Content="Frame"/>
            <d3:HorizontalLine Value="{Binding MaxVelocity}" Stroke="Red" StrokeThickness="2"/>
            <d3:HorizontalLine Value="{Binding MinVelocity}" Stroke="Red" StrokeThickness="2"/>
            
        </d3:ChartPlotter>
        
        <d3:ChartPlotter x:Name="cht_left" VerticalAlignment="Bottom" Margin="83,0,37,43" Height="200">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalDateTimeAxis x:Name="dateAxis1"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:Header FontFamily="Georgia" Content="left hand"/>
            <d3:VerticalAxisTitle FontFamily="Georgia" Content="Velocity [V]" />
            <d3:HorizontalAxisTitle FontFamily="Georgia" Content="Time"/>
            <d3:HorizontalLine Value="{Binding MaxVelocity}" Stroke="Red" StrokeThickness="2"/>
            <d3:HorizontalLine Value="{Binding MinVelocity}" Stroke="Red" StrokeThickness="2"/>
        </d3:ChartPlotter>
        <Slider x:Name="sld_progress" HorizontalAlignment="Left" Margin="83,347,0,0" VerticalAlignment="Top" Width="365" ValueChanged="sld_progress_ValueChanged" DragEnter="sld_progress_DragEnter" DragLeave="sld_progress_DragLeave"/>
       


    </Grid>
</Window>
